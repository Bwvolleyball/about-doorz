---
import '../styles/global.css';

// Define your attributions here
const attributions = [ // title, description, link, imageUrl?
	{
		title: "Door Icons",
		description: "Door icons created by Backwoods - Flaticon",
		link: "https://www.flaticon.com/free-icons/door"
	},
	{
		title: "Doors",
		description: "Photo of Doors by Robert Anasch on Unsplash",
		link: "https://unsplash.com/@diesektion?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash"
	},      
	// Add more attribution objects here
];
---

<!DOCTYPE html>
<html lang="en" class="bg-gray-900">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Attributions - Doorz</title>
		<meta name="description" content="Attributions and acknowledgments for resources used in Doorz" />
	</head>
	<body class="min-h-screen flex flex-col items-center justify-center p-4 text-white">
		<main class="max-w-4xl mx-auto">
			<a href="/about-doorz" class="text-purple-400 hover:text-purple-300 mb-8 inline-block">← Back to Home</a>
			
			<h1 class="text-6xl font-bold mb-6 bg-gradient-to-r from-purple-400 to-pink-600 text-transparent bg-clip-text">
				Attributions
			</h1>
			
			<p class="text-xl mb-8 text-gray-300">
				We gratefully acknowledge the following resources used in Doorz
			</p>

			<div class="space-y-8">
				{attributions.map((item, index) => (
					index % 2 === 0 ? (
						<div class="bg-gray-800 p-8 rounded-xl shadow-2xl">
							<div class={`flex ${item.imageUrl ? 'flex-col md:flex-row gap-6' : ''} items-center`}>
								{item.imageUrl && (
									<div class="w-32 h-32 flex-shrink-0">
										<img 
											src={item.imageUrl} 
											alt={`${item.title} preview`}
											class="w-full h-full object-cover rounded-lg"
										/>
									</div>
								)}
								<div class={`flex-grow ${item.imageUrl ? 'text-left' : 'text-center'}`}>
									<h2 class="text-2xl font-bold mb-2">{item.title}</h2>
									<p class="text-gray-300 mb-4">{item.description}</p>
									<a 
										href={item.link} 
										target="_blank" 
										rel="noopener noreferrer" 
										class="text-purple-400 hover:text-purple-300 inline-flex items-center gap-2"
									>
										View Resource 
										<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
										</svg>
									</a>
								</div>
							</div>
						</div>
					) : (
						<div class="bg-gradient-to-r from-purple-900 to-pink-900 p-8 rounded-xl">
							<div class={`flex ${item.imageUrl ? 'flex-col md:flex-row gap-6' : ''} items-center`}>
								{item.imageUrl && (
									<div class="w-32 h-32 flex-shrink-0">
										<img 
											src={item.imageUrl} 
											alt={`${item.title} preview`}
											class="w-full h-full object-cover rounded-lg"
										/>
									</div>
								)}
								<div class={`flex-grow ${item.imageUrl ? 'text-left' : 'text-center'}`}>
									<h2 class="text-2xl font-bold mb-2">{item.title}</h2>
									<p class="text-gray-200 mb-4">{item.description}</p>
									<a 
										href={item.link} 
										target="_blank" 
										rel="noopener noreferrer" 
										class="text-purple-400 hover:text-purple-300 inline-flex items-center gap-2"
									>
										View Resource 
										<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
										</svg>
									</a>
								</div>
							</div>
						</div>
					)
				))}

				{attributions.length === 0 && (
					<div class="bg-gray-800 p-8 rounded-xl shadow-2xl text-center">
						<p class="text-gray-300">No attributions have been added yet.</p>
					</div>
				)}
			</div>
		</main>

		<footer class="mt-16 text-gray-400 text-sm">
			<p>© 2025 Doorz. All rights reserved.</p>
		</footer>
	</body>
</html> 